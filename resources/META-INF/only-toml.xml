<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">
        <runLineMarkerContributor language="TOML"
                                  implementationClass="com.koxudaxi.poetry.PoetryExtrasLineMarkerContributor"/>
        <runLineMarkerContributor language="TOML"
                                  implementationClass="com.koxudaxi.poetry.PoetryScriptsLineMarkerContributor"/>
        <localInspection language="TOML" enabledByDefault="true" implementationClass="com.koxudaxi.poetry.PoetryVersionInspection" displayName="Poetry inspection" groupName="Poetry" suppressId="Poetry"/>

    </extensions>
</idea-plugin>